pipeline {
    agent any
    stages {
        stage ("SCM checkout") {
            steps {
               checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Mouradchelbi/Jenkins_Ansible.git']])
                
            }
        }
        
        stage('Hello') {
         steps {
           sh '''
          ansible --version
          ansible-playbook --version
          ansible-galaxy --version
            '''
              }
                       }



    }
}